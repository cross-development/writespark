        </a>

        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0 gap-4">
            <li>
                <a href="/" class="nav-link px-2 link-light">Feed</a>
            </li>

            <li>
                <a href="/users" class="nav-link px-2 link-light">Authors</a>
            </li>

            {{#if user.isAuthenticated}}
