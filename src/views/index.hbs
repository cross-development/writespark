<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
        <h1 class="display-4 fst-italic">{{posts.top.title}}</h1>
        <p class="lead my-3">{{cutString posts.top.content "120"}}</p>
        <p class="lead mb-0"><a href="/posts/{{posts.top.id}}" class="text-white fw-bold">Continue reading</a></p>
    </div>
</div>

<div class="row mb-2">
    {{#each posts.trending}}
    <div class="col-md-6">
        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
                <h2 class="h2">{{title}}</h2>
                <div class="mb-1 text-muted">{{dateFormat createdAt "MMMM dd, yyyy"}}</div>
                <p class="card-text mb-auto">{{cutString content "90"}}</p>
                <div class="d-flex justify-content-between">
                    <a href="/posts/{{id}}">Continue reading</a>
                    <span class="text-muted fs-6">Comments ({{getArrayLength comments}})</span>
                </div>
            </div>

            <div class="col-auto d-none d-lg-block">
                <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" role="img"
                    aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                    <title>Placeholder</title>
                    <rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef"
                        dy=".3em">Thumbnail</text>
                </svg>

            </div>
        </div>
    </div>
    {{/each}}
</div>

<div class="row g-5">
    <div class="col-md-8">
        {{#each posts.latest}}
        <article class="pt-2 pb-4 border-bottom">
            <h3 class="h3">{{title}}</h3>
            <p class="text-muted">{{dateFormat createdAt "MMMM dd, yyyy"}}
                by <a href="/profiles/{{author.id}}">{{author.name}}</a>
            </p>
            <p>{{cutString content "200"}}</p>
            <div class="d-flex justify-content-between">
                <a href="/posts/{{id}}">Continue reading</a>
                <span class="text-muted fs-6">Comments ({{getArrayLength comments}})</span>
            </div>
        </article>
        {{/each}}
    </div>

    <div class="col-md-4">
        <div class="position-sticky" style="top: 5rem;">
            <div class="p-4 mb-3 bg-light rounded">
                <h4 class="fst-italic">About</h4>
                <p class="mb-0">At Binary Bits, we're passionate about demystifying the ever-evolving world of
                    technology. We strive to deliver informative and engaging articles that break down complex concepts
                    into easy-to-understand pieces.</p>
            </div>

            <div class="p-4">
                <h4 class="fst-italic">Archives</h4>
                <ol class="list-unstyled mb-0">
                    <li><a href="#">March 2021</a></li>
                    <li><a href="#">February 2021</a></li>
                    <li><a href="#">January 2021</a></li>
                    <li><a href="#">December 2020</a></li>
                    <li><a href="#">November 2020</a></li>
                    <li><a href="#">October 2020</a></li>
                    <li><a href="#">September 2020</a></li>
                    <li><a href="#">August 2020</a></li>
                    <li><a href="#">July 2020</a></li>
                    <li><a href="#">June 2020</a></li>
                    <li><a href="#">May 2020</a></li>
                    <li><a href="#">April 2020</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>