<div style="row">
    <div class="col-8 mx-auto">
        <div class="px-4 py-4 mt-3 mb-5 text-center border-bottom">
            <div class="rounded-circle d-flex mx-auto mb-3 align-items-center justify-content-center"
                style="width: 60px; height: 60px; background-color: #cecece;">
                <i class="bi bi-person-fill d-flex fs-1"></i>
            </div>

            <h1 class="display-6 fw-bold mb-1">{{name}}</h1>

            <p class="text-muted mb-4">{{email}}</p>

            <div class="col-lg-6 mx-auto">
                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                    <p class="mb-0">Posts: {{getArrayLength posts}}</p>

                    <p class="mb-0">Comments: {{getArrayLength comments}}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    {{#each posts}}
    <article class="pt-2 pb-4 mb-3 border-bottom">
        <h3 class="h3 mb-3">{{title}}</h3>

        <p class="text-muted" style="font-size: 12px;">{{dateFormat createdAt "MMMM dd, yyyy"}}</p>

        <p class="mb-4">{{cutString content "300"}}</p>

        <div class="d-flex justify-content-between">
            <a href="/posts/{{id}}" style="font-size: 12px;">Continue reading</a>

            <span class="text-muted" style="font-size: 12px;">Comments ({{getArrayLength comments}})</span>
        </div>
    </article>
    {{/each}}
</div>